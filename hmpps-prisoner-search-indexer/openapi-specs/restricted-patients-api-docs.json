      "RestrictedPatient" : {
        "type" : "object",
        "properties" : {
          "prisonerNumber" : {
            "type" : "string"
          },
          "fromLocationId" : {
            "type" : "string"
          },
          "hospitalLocationCode" : {
            "type" : "string"
          },
          "supportingPrisonId" : {
            "type" : "string"
          },
          "dischargeTime" : {
            "type" : "string",
            "format" : "date-time"
          },
          "commentText" : {
            "type" : "string"
