          "hospitalLocationCode" : {
            "type" : "string"
          },
          "supportingPrisonId" : {
            "type" : "string"
          },
          "dischargeTime" : {
            "type" : "string",
            "format" : "date-time"
          }
        },
        "required" : [ "fromLocationId", "hospitalLocationCode", "offenderNo" ]
      },
      "SupportingPrisonRequest" : {
        "type" : "object",
        "properties" : {
          "offenderNo" : {
            "type" : "string"
          },
          "supportingPrisonId" : {
            "type" : "string"
          }
        },
        "required" : [ "offenderNo", "supportingPrisonId" ]
