{
  "role": {
    "name": "hmpps-prisoner-search-indexer"
  },
  "customDimensions": {
    "service.version": "${BUILD_NUMBER}"
  },
  "instrumentation": {
    "logging": {
      "level": "INFO"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "percentage": 100,
    "overrides": [
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "server.address",
            "value": ".+",
            "matchType": "regexp"
          }
        ],
        "percentage": 5
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 5
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/info",
            "matchType": "strict"
          }
        ],
        "percentage": 5
      },
      {
        "telemetryType": "exception",
        "attributes": [
          {
            "key": "exception.stacktrace",
            "value": ".*Cannot index a document due to seq_no.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 0
      }
    ]
  }
}
